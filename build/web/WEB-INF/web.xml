<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorLogin</servlet-name>
        <servlet-class>controlador.ControladorLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorGrabarUsuario</servlet-name>
        <servlet-class>controlador.ControladorGrabarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCargarCargas</servlet-name>
        <servlet-class>controlador.ControladorCargarCargas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorRegistrarTrabajos</servlet-name>
        <servlet-class>controlador.ControladorRegistrarTrabajos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEliminar</servlet-name>
        <servlet-class>controlador.ControladorEliminar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorLogin</servlet-name>
        <url-pattern>/ControladorLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorGrabarUsuario</servlet-name>
        <url-pattern>/ControladorGrabarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCargarCargas</servlet-name>
        <url-pattern>/ControladorCargarCargas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorRegistrarTrabajos</servlet-name>
        <url-pattern>/ControladorRegistrarTrabajos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEliminar</servlet-name>
        <url-pattern>/ControladorEliminar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
